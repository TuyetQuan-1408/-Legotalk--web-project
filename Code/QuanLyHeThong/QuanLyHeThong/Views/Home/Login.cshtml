
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/teamCss.css" />
<h2 class="text-center">Đăng Nhập Hệ Thống</h2>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-5">
        <div class="jumbotron">
            <form method="post" action="@Url.Action("Login", "Home")">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="username">Tên Đăng Nhập</label>
                    <input type="text" class="form-control" id="username" name="username" required />
                </div>

                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-success mx-6">Đăng Nhập</button>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </form>
        </div>
    </div>
</div>

