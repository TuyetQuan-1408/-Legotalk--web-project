@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/index-css.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Pridi:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<h2 class="statistic-title">
    THỐNG KÊ CHI TIẾT
</h2>
<!-- Chọn năm -->
<div class="row">
    <div class="col-md-4">
        <label for="yearSelect" class="form-label fw-bold">Chọn năm:</label>
        <div class="input-group">
            <select id="yearSelect" class="form-select form-select-lg shadow-sm" onchange="updateYear()" style="cursor: pointer;">
                @for (int i = DateTime.Now.Year; i >= 2000; i--)
                {
                    <option value="@i" @if (i == ViewBag.CurrentYear) { <text> selected</text> }>@i</option>
                }
            </select>
            <span class="input-group-text bg-primary text-white">
                <i class="fas fa-calendar-alt"></i> <!-- Font Awesome icon -->
            </span>
        </div>
    </div>
</div>

<!-- Biểu đồ doanh thu theo tháng -->
<div class="row mt-5">
    <div class="col-md-12">
        <div class="chart-container">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
</div>

<div class="row mt-1">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>8</h3>
                <p>SẢN PHẨM</p>
            </div>
            <div class="icon">
                <i class="fas fa-shopping-bag"></i>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>8</h3>
                <p>HÓA ĐƠN</p>
            </div>
            <div class="icon">
                <i class="fas fa-chart-bar"></i>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>8</h3>
                <p>KHÁCH  HÀNG</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-plus"></i>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>8</h3>
                <p>NHÂN VIÊN</p>
            </div>
            <div class="icon">
                <i class="fas fa-chart-pie"></i>
            </div>
        </div>
    </div>
    <!-- ./col -->
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const monthlyRevenue = @Html.Raw(Json.Encode(ViewBag.MonthlyRevenue));

    const currentYear = '@ViewBag.CurrentYear';

    let labels = [];
    let data = [];

    for (let month = 1; month <= 12; month++) {
        const monthStr = (month < 10 ? '0' : '') + month;
        const yearMonth = `${currentYear}-${monthStr}`; 
        labels.push(`Tháng ${monthStr}`); 
        data.push(0);
    }
    monthlyRevenue.forEach(item => {
        const month = item.YearMonth.substring(5, 7);
        const index = parseInt(month) - 1;
        data[index] = item.TotalRevenue; 
    });

    const chartData = {
        labels: labels,
        datasets: [{
            label: 'Doanh thu',
            data: data,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(255, 205, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(201, 203, 207, 0.2)'
            ],
            borderColor: [
                'rgb(255, 99, 132)',
                'rgb(255, 159, 64)',
                'rgb(255, 205, 86)',
                'rgb(75, 192, 192)',
                'rgb(54, 162, 235)',
                'rgb(153, 102, 255)',
                'rgb(201, 203, 207)'
            ],
            borderWidth: 1
        }]
    };
    const ctx = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(ctx, {
        type: 'bar',
        data: chartData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.raw.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                        }
                    }
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Tháng'
                    },
                    type: 'category',
                    ticks: {
                        autoSkip: false,
                        maxRotation: 0,
                        minRotation: 0
                    },
                    grid: {
                        display: false
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Doanh thu (VND)'
                    },
                    ticks: {
                        beginAtZero: true,
                        callback: function(value) {
                            return value.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                        }
                    }
                }
            }
        }
    });

    function updateYear() {
        const selectedYear = document.getElementById('yearSelect').value;
        window.location.href = '/Home/Index?year=' + selectedYear;
    }
</script>